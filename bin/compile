#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "-----> Install aria2c"
BUILD_DIR=$1
VENDOR_DIR="vendor"

cd $BUILD_DIR
mkdir -p $VENDOR_DIR
cd $VENDOR_DIR
mkdir -p aria2c
cd aria2c
curl -s https://api.github.com/repos/P3TERX/Aria2-Pro-Core/releases/latest | grep "browser_download_url" | cut -d '"' -f 4 | xargs wget -qO aria2.tar.gz
tar -zxf aria2.tar.gz
rm -rf aria2.tar.gz

echo "exporting PATH" | indent
PROFILE_PATH="$BUILD_DIR/.profile.d/aria2c.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo 'export PATH="$PATH:${HOME}/vendor/aria2c"' >> $PROFILE_PATH
